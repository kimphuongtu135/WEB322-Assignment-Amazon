<div class="customer">
    <form method="POST" action="/products/updateProduct/{{_id}}?method=PUT" enctype="multipart/form-data">

        <legend class="legend">Edit Product</legend> <br>

        <label for="pname">Product name</label>
        <input type="text" name="pname" id="pname" value='{{productName}}'>
        <br>

        <label for="pprice">Price</label>
        <input type="text" name="pprice" id="pprice" value='{{productPrice}}'>
        <br>

        <label for="pdetail">Product Details</label>
        <textarea id="pdetail" name="pdetail" value='{{productDetail}}'>{{productDetail}}</textarea><br>

        <label for="pcate">Product Category</label>
        <input type="text" name="pcate" id="pcate" value='{{productCategory}}'>
        <br>

        <label for="pquan">Product Quantity</label>
        <input type="text" name="pquan" id="pquan" value='{{productQuantity}}'>
        <br>

        <label>Best Seller</label>
        <select name="pbest">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br><br>

        <label>File Upload</label>
        <input type="file" name="productPic" id="productPic">
        <br><br>
        {{#if errorMessage}}
        <div class="errors"> {{errorMessage}}</div>
        {{/if}}
        <br><br>

        <input class="button" type="submit" value="Update Product">
    </form>
</div>