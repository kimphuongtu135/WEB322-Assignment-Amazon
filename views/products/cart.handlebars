<div class="bigDiv">
    {{#if productShow}}

    {{#each productShow}}
    <div class="container-product">



        <a href="/products/productDecs/{{this.id}}">
            <img src="/images/{{this.productPic}}" alt="{{this.productName}}" width="200" height="200">
        </a>


        <div class="productInfor">
            <p>
                <span class="bold"> Name:</span> {{this.productName}}
            </p>

            <p>
                <span class="bold"> Quantity: </span>{{this.productQuantity}}
            </p>

            <p>
                <span class="bold">Detail:</span> {{this.productDetail}}
            </p>

            <p>
                <span class="bold">Price $:</span> {{this.productPrice}}
            </p>

        </div>


    </div>
    {{/each}}

    <form method="POST" action="/products/profile/shoppingCart">

        <label for="totalPrice">Total Price (Included Tax):</label>
        <input type="number" name="totalPrice" id="totalPrice" value='{{totalPrice}}'>
        <br><br>

        <button type="submit"><i class="fa fa-shopping-cart" style="font-size:24px"></i>Place The Order</button>

    </form>

    {{else}}
    <h2 class="noItem">There is no product in your Shopping Cart</h2>

    {{/if}}
</div>