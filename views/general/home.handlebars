
<div class="home">
    <div class="promotion">
        <a href="/products">
            <img src="/images/offer.JPG" alt="promotion">
        </a>
    </div>



    <div class="title">Categories</div>

    <div class="categories">

        {{#each categoriesShow}}
        <div class="categoryItem">

            <p class="titleItem">
                {{this.categoryName}}
            </p>

            <p>
                <a href="/products/{{this.categoryName}}">
                    <img src="/images/{{this.categoryPic}}" alt="{{this.categoryName}}" height="200" width="200">
                </a>
            </p>

        </div>

        {{/each}}
    </div>


    <div class="title">Best Seller</div>

    <div class="bestSeller">
        {{#each bestsellerShow}}
        <div class="bestSellerItem">
            <p>
                <img src="/images/{{this.productPic}}" alt="{{this.productName}}" width="200" height="200">
            </p>
        </div>
        {{/each}}
    </div>
    
</div>